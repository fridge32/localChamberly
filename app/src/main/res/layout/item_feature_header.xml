<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <TextView
        android:id="@+id/header_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Feature"
        android:textColor="#000000"
        android:textSize="17sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/sf_pro_display_regular"
        app:layout_constraintEnd_toStartOf="@+id/free_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.5"/>


    <FrameLayout
        android:id="@+id/free_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/paid_container"
        app:layout_constraintStart_toEndOf="@+id/header_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.25">

        <TextView
            android:id="@+id/free_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Free"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_pro_display_regular"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/free_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:src="@drawable/ic_lock" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/paid_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/free_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25">

        <TextView
            android:id="@+id/paid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textColor="#000000"
            android:layout_marginTop="1dp"
            android:textSize="17sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/paid_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_game_controller"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginStart="-2dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/plus"
            android:visibility="visible" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
