<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="12dp">


    <LinearLayout
        android:id="@+id/ll_plan_container"
        android:layout_width="165.5dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/plan_cards"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/plan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_bold"
            android:layout_gravity="left"
            android:letterSpacing="0.1"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft = "4dp"
            android:text="Plan Title"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/plan_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft = "4dp"
            android:includeFontPadding="false"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="Price"
            android:textColor="#000000"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/plan_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="Details"
            android:layout_marginLeft = "4dp"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/best_deal_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/best_deal_badge"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="Best deal"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- Sparkle Effect -->
    <ImageView
        android:id="@+id/sparkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/best_deal_badge"
        android:layout_toEndOf="@+id/best_deal_badge"
        android:layout_marginStart="30dp"
        android:contentDescription="Sparkle Image"
        android:src="@drawable/sparkle"
        android:visibility="visible"/>

</RelativeLayout>
