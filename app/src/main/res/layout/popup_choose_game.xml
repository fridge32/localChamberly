<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a game"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/dialog_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 coin will be consumed."
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/button_random_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:text="Random Questions"
        android:textAllCaps="false"
        android:background="@drawable/button_outlined"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button_pick_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:text="Pick a topic"
        android:textAllCaps="false"
        android:background="@drawable/button_outlined"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:background="@drawable/button_outlined"
        android:textColor="#000000" />
</LinearLayout>
