<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="16dp"
    android:paddingHorizontal="12dp"
    tools:context=".presentation.fragments.PaywallFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="232dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/cross"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_cross"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_chamberly_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:src="@drawable/chamberlyplus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cross"
                app:layout_constraintTop_toBottomOf="@id/cross"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginTop="8dp" />

            <!-- Plan Cards Container -->


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_plans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_chamberly_plus" />


            <TextView
                android:id="@+id/unlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="Unlock Happiness"
                android:textColor="@android:color/black"
                android:textSize="19sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_plans" />

            <TextView
                android:id="@+id/connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="Connect.Vent.Make Friends"
                android:textColor="#2E2E5B"
                android:textSize="22sp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unlock" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/connect" />

            <LinearLayout
                android:id="@+id/dot_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/view_pager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="Scroll to compare plans"
                android:textColor="#2E2E5B"
                android:layout_marginTop="25dp"
                android:textSize="17sp"
                android:includeFontPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dot_layout" />

            <TextView
                android:id="@+id/unlock_advanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="41dp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:paddingVertical="0dp"
                android:includeFontPadding="false"
                android:text="Unlock Happiness with"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scroll" />

            <TextView
                android:id="@+id/unlock_advanced2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingVertical="0dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="Advanced Features"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unlock_advanced" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unlock_advanced2" />

            <Button
                android:id="@+id/view_more_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View More"
                android:fontFamily="@font/sf_pro_display_regular"
                android:textColor="#4A5E6D"
                android:textSize="15sp"
                android:includeFontPadding="false"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/recycler_features"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/app_store_rating"
                android:layout_marginTop="0dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_more_button">

                <!-- 4.8 Rating -->
                <TextView
                    android:id="@+id/rating_value"
                    android:layout_width="102dp"
                    android:layout_height="76dp"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="4.8"
                    android:textColor="#2E2E5B"
                    android:textSize="64sp" />

                <!-- Rating text -->
                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="78dp"
                    android:layout_height="31dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Rating"
                    android:textColor="#2E2E5B"
                    android:textSize="26sp" />

                <!-- Stars -->
                <ImageView
                    android:id="@+id/stars_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Rating stars"
                    android:src="@drawable/blue_five_stars" />

                <!-- App Store text -->
                <TextView
                    android:id="@+id/app_store_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="on App store"
                    android:textColor="#2E2E5B"
                    android:textSize="14sp" />

            </LinearLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/review_view_pager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/app_store_rating" />

            <LinearLayout
                android:id="@+id/review_dot_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/review_view_pager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Static bottom element -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/static_bottom_element"
        android:layout_width="386dp"
        android:layout_height="192dp"
        android:layout_gravity="bottom"
        android:background="@drawable/paywall_static_background"
        android:padding="16dp">

        <!-- Top arrow and icon -->
        <!--        <ImageView-->
        <!--            android:id="@+id/arrow_up"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:src="@drawable/ic_arrow_up"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            android:layout_marginTop="8dp" />-->

        <!-- Main subscription text -->
        <TextView
            android:id="@+id/subscription_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="3 day free trial, then\n39.00 kr per month. Cancel Anytime."
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Subscription button -->
        <Button
            android:id="@+id/subscription_button"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/freetrial_button_background"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="Start my free trial"
            android:textAllCaps="false"
            android:textColor="#2E2E5B"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subscription_text" />

        <!-- Terms and Privacy Policy -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subscription_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:includeFontPadding="false"
                android:text="Restore Purchases"
                android:textColor="#000043"
                android:textSize="11sp" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
